@charset "utf-8";
/* CSS Document */

#profile_container {
	background: #FFF;
	width: 220px;
	height: auto;
	min-height: 510px;
	float: left;
	-moz-border-radius: 3px;
	border-radius: 3px;
}

#feed_container {
	width: 720px;
	height: auto;
	float: right;
	-moz-border-radius: 3px;
	border-radius: 3px;
	background-color: #FFF;
	background-image: url(../images/corner_bg.png);
	background-repeat: no-repeat;
	background-position: right top;
}
#popupPictureClose{
	float: right;
}
.user_img {
	width: 160px;
	/*border: 1px solid #CCC;*/
}
.content {
	margin: 30px;
}
.user_name {
	font-size: 16px;
	color: #0087bf;
	font-weight: bold;
	margin-top: 10px;
	margin-bottom: 5px;
}
.edit_icon {
	float: right;
}
.profile_button {
	margin-top: 10px;
}
 .clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
    }

#profile_container input[type=button]{
	margin: 10px 0px;
}
